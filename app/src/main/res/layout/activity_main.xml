<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alberto.smallb.MainActivity">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/titleMemorama"
            android:layout_width="294dp"
            android:layout_height="163dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="50dp"
            app:srcCompat="@drawable/memorama"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="219dp" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="87dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:onClick="rotatingImage"
            app:srcCompat="@drawable/start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <xyz.hanks.library.bang.SmallBangView
                android:id="@+id/carta1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10sp"
                app:circle_end_color="#ffbc00"
                app:circle_start_color="#fa9651"
                app:dots_primary_color="#fa9651"
                app:dots_secondary_color="#ffbc00"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/card1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cambio" />
            </xyz.hanks.library.bang.SmallBangView>

            <xyz.hanks.library.bang.SmallBangView
                android:id="@+id/carta2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10sp"
                app:circle_end_color="#ffbc00"
                app:circle_start_color="#fa9651"
                app:dots_primary_color="#fa9651"
                app:dots_secondary_color="#ffbc00"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/card2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/carta" />
            </xyz.hanks.library.bang.SmallBangView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <xyz.hanks.library.bang.SmallBangView
                android:id="@+id/carta3"
                android:layout_width="32dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10sp"
                app:circle_end_color="#ffbc00"
                app:circle_start_color="#fa9651"
                app:dots_primary_color="#fa9651"
                app:dots_secondary_color="#ffbc00"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/card3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/carta" />
            </xyz.hanks.library.bang.SmallBangView>

            <xyz.hanks.library.bang.SmallBangView
                android:id="@+id/carta4"
                android:layout_width="32dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10sp"
                app:circle_end_color="#ffbc00"
                app:circle_start_color="#fa9651"
                app:dots_primary_color="#fa9651"
                app:dots_secondary_color="#ffbc00"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/card4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/carta" />
            </xyz.hanks.library.bang.SmallBangView>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
